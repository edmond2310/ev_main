.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0rpx 0rpx 32rpx 0rpx;
  box-sizing: border-box;
  color: #555555;
}

.container .weui-select {
  text-align: right;
  color: rgba(0, 0, 0, 0.3);
}

.flex {
  display: flex;
}

.section {
  margin-top: 16px;
}

.section-title {
  font-size: 16px;
  margin-bottom: 8px;
}

.bg-white {
  background-color: #ffffff;
}

.title-wrap {
  padding: 0 16px;
  display: flex;
  font-size: 16px;
  margin-bottom: 8px;
  color: #555555;
}

.title-wrap .text {
  flex: 1;
}

.weui-cell__bd,
.weui-label {
  font-size: 16px;
}

.pdt-16 {
  padding-top: 16px;
}

.pdt-20 {
  padding-top: 20px;
}
