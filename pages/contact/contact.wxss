page {
  background-color: #f8f8f8;
  font-size: 14px;
  color: #555555;
}

.container-about {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  background-color: #ffffff;
}

.input-main {
  width: 100%;
  height: 394rpx;
  box-sizing: border-box;
}

.input-row {
  /* width: 690rpx; */
  margin: 0 auto;
  height: 98rpx;
  position: relative;
  display: flex;
  align-items: center;
  /* border: 1rpx solid #e2e2e2; */
  /* border-radius: 20rpx; */
}

.input-row .pwd-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  /* border-right: 1rpx solid #e2e2e2; */
  position: relative;
  border: 2rpx solid #e2e2e2;
  border-right: 0;
  /* border: 1px solid red; */
}

.input-row .pwd-item.active {
  /* box-shadow: 0px 0px 0px 1px #d3a95a; */
  border-color: #d3a95a;
}

.input-row .pwd-item.active + .pwd-item {
  border-left: 2rpx solid #d3a95a;
}

.pwd-item:nth-last-of-type(1) {
  /* border-right: 0; */
  border-right: 2rpx solid #e2e2e2;
}

