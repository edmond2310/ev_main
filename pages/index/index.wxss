.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.prices-table {
  display: flex;
  font-size: 14px;
}

.prices-table .col-a,
.prices-table .col-b {
  width: 50%;
  display: flex;
  flex-direction: column;
}

.prices-table .col-a div,
.prices-table .col-b div {
  padding: 8px 0;
  border-bottom: 1px solid #eee;
  border-left: 1px solid #eee;
}

.prices-table .col-b div {
  padding: 8px 0;
  border-bottom: 1px solid #eee;
  border-right: 1px solid #eee;
}

.prices-table .title {
  padding: 8px 0;
  background: #f8f8f8;
  border-top: 1px solid #eee;
}

.container-index .weui-dialog__hd {
  padding-top: 24px;
}

.container-index .weui-dialog__bd {
  border: none;
}

