/**index.wxss**/
page {
  background-color: #f8f8f8;
  font-size: 14px;
  color: #555555;
}

.ev-play__type {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 16px;
  background-color: #ffffff;
  padding-top: 24px;
  padding-bottom: 8px;
  color: #70bd31;
}

.ev-play__type .charge,
.ev-play__type .credit {
  height: 128px;
  width: 128px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 3px;
  font-size: 16px;
  border: 1px solid #d8dee4;
  color: rgba(0, 0, 0, 0.3);
  background-color: #f8f8f8;
}

.ev-play__type .charge {
  margin-left: 24px;
}

.ev-play__type .credit.active,
.ev-play__type .charge.active {
  background: rgba(17, 17, 26, 0.05);
  color: #04b200;
  background-color: #d1fad7;
  border: 1px solid #66ee78;
  box-shadow: rgba(102, 238, 120, 0.05) 0px 1px 0px,
    rgba(102, 238, 120, 0.1) 0px 0px 8px;
}

.credit-ctx {
  display: flex;
  flex-direction: column;
  padding: 16px;
  justify-content: center;
  align-items: center;
  padding-bottom: 16px;
}

.credit-ctx .title {
  font-size: 18px;
  color: #333333;
}

.credit-ctx .meta {
  display: flex;
  align-items: center;
  margin: 4px 0;
  font-size: 13px;
}

.credit-ctx .meta image {
  width: 18px;
  height: 18px;
  margin-right: 4px;
  position: relative;
  top: -1px;
}

.credit-ctx .act {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #07c160;
  padding: 4px 0px;
  border-radius: 50px;
  color: #ffffff;
  font-size: 14px;
  width: 90%;
  margin-top: 8px;
}

.credit-ctx .act .sub {
  font-size: 12px;
}

.credit-ctx .intro {
  display: flex;
  flex-direction: column;
  margin-top: 16px;
  color: #666666;
}

.credit-ctx .intro .title {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.3);
  margin-bottom: 4px;
}

.wxplay-logo {
  width: 24px;
  height: 24px;
  margin-right: 4px;
}

.credit-ctx--binded {
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
  padding: 16px;
  padding-bottom: 32px;
  color: #333333;
}

.credit-ctx--binded .text {
  font-size: 18px;
  margin-bottom: 4px;
}

.credit-ctx--binded .act {
  display: flex;
  text-align: center;
  justify-content: center;
  font-size: 13px;
}

.credit-ctx--binded .act .unbind {
  margin-left: 4px;
  color: #10aeff;
  font-size: 13px;
}

.credit-ctx--binded .logo {
  width: 18px;
  height: 18px;
  margin-right: 4px;
}

.charge-ctx {
  padding: 16px;
  display: flex;
  flex-direction: column;
  padding-bottom: 32px;
}

.charge-ctx .amount {
  margin-top: 8px;
  display: flex;
  justify-content: space-between;
}

.charge-ctx .amount .item {
  height: 40px;
  width: 31%;
  border: 1px solid red;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  border: 1px solid #e3e3e3;
  border-radius: 3px;
  margin-bottom: 4px;

  font-size: 16px;
}

.charge-ctx .amount .item:hover {
  border-radius: 4px;
}

.charge-ctx .amount .item.active {
  /* background-color: #70bd31;
  color: #ffffff;
  border: 1px solid #70bd31; */
  background-color: #ffffff;
  color: #70bd31;
  border: 1px solid #70bd31;
}

.charge-ctx .amount input.item.active {
  background-color: #ffffff;
  color: #70bd31;
  border: 1px solid #70bd31;
}

.charge-ctx__desc {
  margin-top: 8px;
  font-size: 13px;
}

.ev-play__submit {
  margin-top: 24px;
}

.hide {
  display: none !important;
}
